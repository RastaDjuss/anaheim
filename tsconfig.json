{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "jest",
      "node"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
  "baseUrl": "./src",
  "paths": {
    "@/*": ["*"], // Main root alias for the entire source folder
    "@project/anchor/*": ["anchor/src/*"], // Specific alias for anchor
    "@/hooks/*": ["hooks/*"], // Alias for hooks
    "@/utils/*": ["utils/*"] // Alias for utils
  }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.spec.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
